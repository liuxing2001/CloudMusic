<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->

    <style name="AppTheme" parent="XUITheme.Phone">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_F71816</item>
        <item name="colorPrimaryDark">@color/xui_transparent</item>
        <item name="colorAccent">@color/white</item>
        <item name="xui_actionbar_height">?actionBarSize</item>
    </style>


    <style name="AppTheme.SplashActivity">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/splash_view</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppTheme.PhoneLoginActivity">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/bg_global</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppTheme.MainActivity">
        <item name="android:windowBackground">@drawable/bg_global</item>

    </style>


    <style name="Theme.CloudMusic.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.CloudMusic.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--DialogTheme，用于将Activity作为Dialog的主题-->
    <style name="DialogTheme" parent="XUITheme.Phone">
        <!--设置dialog的背景，此处为系统给定的透明值-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--Dialog的windowFrame框为无-->
        <item name="android:windowFrame">@null</item>
        <!--无标题-->
        <item name="android:windowNoTitle">true</item>　　　　　
        <!--是否浮现在activity之上-->
        <item name="android:windowIsFloating">true</item>
        <!--是否半透明-->
        <item name="android:windowIsTranslucent">true</item>
        <!--是否有覆盖-->
        <item name="android:windowContentOverlay">@null</item>
        <!--设置Activity出现方式-->
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <!--背景是否模糊显示-->
        <item name="android:backgroundDimEnabled">true</item>
    </style>

</resources>