<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="XUITheme.Phone">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/xui_config_color_gray_1</item>
        <item name="colorPrimaryDark">@color/xui_config_color_gray_1</item>
        <item name="colorAccent">@color/xui_config_color_gray_1</item>
        <item name="xui_actionbar_height">?actionBarSize</item>
    </style>

    <style name="AppTheme.SplashActivity">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/splash_view</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="Theme.CloudMusic.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.CloudMusic.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.CloudMusic.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />



</resources>